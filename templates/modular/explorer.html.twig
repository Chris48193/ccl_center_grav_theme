<div class="grid-container">
	<div class="grid-x grid-margin-x">
		<div class="cell">
			{{ page.content|raw }}
		</div>
	</div>


	<div class="grid-x grid-margin-x explorers">
		<div class="cell" style="margin-inline:0;width:100%;">
			<div class="grid-x">
				{% for item in page.header.items %}

					{% set bg_color = item.bg_color|default( ((loop.index // 2) % 2) == 0 ? 'bg-primary text-secondary' : 'bg-secondary text-white' ) %}
					<a href="{{ item.link }}" style="display:block;" class="cell medium-12 large-6 explorer">
						<div class="grid-x">
							<div class="cell explorer_text medium-6 large-6 {{ bg_color }} {{ loop.index is even ? '' : '' }} {{ ((loop.index0 // 2) % 2) == 0 ? 'large-order-2' : 'large-order-1' }} {{ loop.index is even ? 'medium-order-2':'medium-order-1' }}">
								<div class="name">{{ item.text|raw }}</div>
							</div>
							{% set image = item.image|default("theme://images/pdf_icon.png") %}
							<div class="cell explorer_image medium-6 large-6 {{ ((loop.index0 // 2) % 2) == 0 ? 'large-order-1' : 'large-order-2' }} {{ loop.index is even ? 'medium-order-1':'medium-order-2' }}" style = "background-image:url('{{ page.media[image].url }}');"></div>
						</div>
					</a>
				{% endfor %}
			</div>
		</div>
	</div>
</div>