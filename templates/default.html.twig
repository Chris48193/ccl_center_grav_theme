{% extends "partials/base.html.twig" %}

{% block main %}
    <main class="page-main">
    {% block outer_content %}
            <div class="grid-container {{ page.header.page_classes|default("section") }}">
                <div class="grid-x grid-margin-x align-center">
                    <div class="cell">
                        {% block title %}
                            {% if page.header.show_title|defined(true) %}
                                {% include "partials/title.html.twig" with {"title": page.title, "tag": "h1", "classes": page.header.title_classes} only %}
                            {% endif %}
                        {% endblock %}
                        {% block content %}
                            {{ page.content|raw }}
                        {% endblock %}
                    </div>
                </div>
            </div>
        {% endblock %}
    </main>
{% endblock %}
